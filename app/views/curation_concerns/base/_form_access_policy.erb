<fieldset id="set-license">
  <legend>Choose Access and Use Boilerplate</legend>
  <%= f.input :access_policy,
              as: :select,
              collection: {
                      'Marquand' => 'Do you want a jelly baby?',
                      'Rare Books and Special Collections' => "Don't be sad Grace.",
                      'Mendel Music Library' => "You'll do great things."
              },
              input_html: { class: 'form-control' },
              label: 'Access Policy'
  %>

  <%= f.input :rights_statement,
              as: :select,
              collection: RightsService.select_options,
              input_html: { class: 'form-control rights-statement' },
              label: 'Rights Statement' %>

  <%= f.input :rights_note, as: :text, label: 'Rights Note',
      input_html: { class: 'rights-note', readonly: !@form.notable_rights_statement? }  %>

  <%= f.input :holding_location,
              as: :select,
              collection: HoldingLocationService.select_options,
              input_html: { class: 'form-control' },
              label: 'Holding Location' %>
</fieldset>
