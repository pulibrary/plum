<li data-reorder-id='<%= node.id %>'>
  <%= simple_form_for [main_app, node], remote: true do |f| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <div class="order-title">
          <%= f.input :title, as: :string, input_html: { name: "file_set[title][]" }, value: node.to_s, label: false %>
        </div>
        <div class="file-set-link pull-right">
          <%= link_to polymorphic_path([main_app, node]), title: "Edit file" do %>
            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
          <% end %>
        </div>
        <div class="order-filename">
          <em title="<%= node.file_label %>">(<%= truncate(node.file_label, length: 29) %>)</em>
        </div>
      </div>
      <div class="panel-body">
        <div class="text-center thumbnail">
          <%= osd_modal_for(node.id) do %>
            <%= render_thumbnail_tag node %>
          <% end %>
        </div>
        <div class="attributes">
          <%= f.input :viewing_hint, collection: [:"", :"non-paged", :"facing-pages"], as: :radio_buttons, label: false, defaults: { input_html: { class: '' }}%>
        </div>
        <div class="spacer">
        </div>
      </div>
    </div>
  <% end %>
</li>
