<% if Hyrax.config.display_media_download_link? %>
    <%= link_to hyrax.download_path(file_set),
                target: :_blank,
                data: { turbolinks: false },
                title: "Download the full-sized image" do %>
        <figure>
            <%= render_thumbnail_tag file_set, { class: "img-responsive",
                    alt: "Download the full-sized image of #{file_set.to_s}",
                    onerror: default_icon_fallback } %>
            <figcaption>Download the full-sized image</figcaption>
        </figure>
    <% end %>
<% else %>
    <figure>
        <%= render_thumbnail_tag file_set, class: "img-responsive",
                alt: "Thumbnail of #{file_set.to_s}" %>
    </figure>
<% end %>
